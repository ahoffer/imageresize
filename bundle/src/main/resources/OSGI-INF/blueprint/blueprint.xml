<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <bean id="imageSizeBean" class="com.github.ahoffer.imagesize.bundle.ImageSizerFactory">
        <property name="bundleContext" ref="blueprintBundleContext"/>
    </bean>

    <service id="imageSizeService" auto-export="all-classes" ref="imageSizeBean"/>

    <service id="subsampleSizer" auto-export="interfaces" ref="subsampleSizerBean">
        <bean class="com.github.ahoffer.imagesize.provider.SamplingSizer"/>
    </service>

    <service id="magickSizer" auto-export="interfaces">
        <bean class="com.github.ahoffer.imagesizerovider.MagickSizer"/>
    </service>

    <service id="preallocatingSizer" auto-export="interfaces">
        <bean class="com.github.ahoffer.imagesizerovider.PreAllocatingSizer"/>
    </service>

</blueprint>