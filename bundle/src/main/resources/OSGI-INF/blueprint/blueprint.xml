<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <bean id="magickExecutable" class="java.io.File">
        <argument value="/Users/aaronhoffer/bin/ImageMagick-7.0.8/bin/convert"/>
    </bean>
    <bean id="magick" class="belittle.sizers.MagickSizer">
        <argument ref="magickExecutable"/>
    </bean>

    <bean id="openJpegExecutable" class="java.io.File">
        <argument value="/Users/aaronhoffer/bin/openjpeg-v2.3.0-osx-x86_64/bin/opj_decompress"/>
    </bean>

    <bean id="openJpeg" class="belittle.sizers.OpenJpeg2000Sizer">
        <argument ref="openJpegExecutable"/>
    </bean>

    <bean id="sampling" class="belittle.sizers.SamplingSizer">
    </bean>

    <bean id="basic" class="belittle.sizers.BasicSizer">
    </bean>

    <bean id="jpeg2000" class="belittle.sizers.JaiJpeg2000Sizer">
    </bean>

    <bean id="sizerCollection" class="belittle.ImageSizerCollection">
        <argument>
            <map>
                <entry key="application/octet-stream">
                    <list>
                        <ref component-id="sampling"/>
                        <ref component-id="magick"/>
                        <ref component-id="basic"/>
                    </list>
                </entry>
                <entry key="image/.*jp[2mx].*">
                    <list>
                        <ref component-id="openJpeg"/>
                        <ref component-id="jpeg2000"/>
                    </list>
                </entry>
            </map>
        </argument>
    </bean>

    <bean id="factory" class="belittle.ResizableImageFactoryImpl">
        <argument ref="sizerCollection"/>
    </bean>

    <service ref="factory" interface="belittle.ResizableImageFactory"/>

</blueprint>