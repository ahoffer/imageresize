<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <bean id="magickExecutable" class="com.github.ahoffer.sizeimage.support.FuzzyFile">
        <argument value="/Users/aaronhoffer/bin/ImageMagick-7.0.8/bin/"/>
        <argument value="convert"/>
        <argument value="c:\space blah;other\path\blah"/>
        <argument value="convert.exe"/>
    </bean>
    <bean id="magick" class="com.github.ahoffer.sizeimage.sizers.MagickSizer">
        <property name="executable" ref="magickExecutable"/>
        <property name="settings">
            <map>
                <entry key="TIMEOUT_SECONDS" value="3600"/>
            </map>
        </property>
    </bean>

    <bean id="openJpegExecutable" class="com.github.ahoffer.sizeimage.support.FuzzyFile">
        <argument value="/Users/aaronhoffer/bin/openjpeg-v2.3.0-osx-x86_64/bin"/>
        <argument value="opj_decompress"/>
        <argument value="c:\space blah;other\path\blah"/>
        <argument value="opj_decompress.exe"/>
    </bean>
    <bean id="openJpeg" class="com.github.ahoffer.sizeimage.sizers.OpenJpeg2000Sizer">
        <property name="executable" ref="openJpegExecutable"/>
    </bean>

    <bean id="sampling" class="com.github.ahoffer.sizeimage.sizers.SamplingSizer"/>
    <bean id="basic" class="com.github.ahoffer.sizeimage.sizers.BasicSizer"/>
    <bean id="jpeg2000" class="com.github.ahoffer.sizeimage.sizers.JaiJpeg2000Sizer"/>

    <service id="belittle" auto-export="all-classes">
        <bean class="com.github.ahoffer.sizeimage.belittle.BeLittleImpl">
            <property name="maxWidth" value="128"/>
            <property name="maxHeight" value="128"/>
            <property name="settings">
                <map>
                    <entry key="application/octet-stream">
                        <list>
                            <ref component-id="magick"/>
                        </list>
                    </entry>
                    <entry key="image/jp2">
                        <list>
                            <ref component-id="jpeg2000"/>
                            <ref component-id="magick"/>
                            <ref component-id="openJpeg"/>
                        </list>
                    </entry>

                    <!--Are these entries needed? Some sources say they are aliases for JPEG 200 MIME types-->
                    <entry key="image/jpx">
                        <list>
                            <ref component-id="jpeg2000"/>
                            <ref component-id="magick"/>
                            <ref component-id="openJpeg"/>
                        </list>
                    </entry>
                    <entry key="image/jpm">
                        <list>
                            <ref component-id="jpeg2000"/>
                            <ref component-id="magick"/>
                            <ref component-id="openJpeg"/>
                        </list>
                    </entry>
                </map>
            </property>
        </bean>
    </service>
</blueprint>